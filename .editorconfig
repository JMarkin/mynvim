root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[jest.config]
indent_size = 2

[*.{babelrc,stylelintrc,eslintrc,bowerrc,jsb3,jsb2,json,vue,scss,jshintrc,jscsrc,js,js.map,yaml,yml,tpl,pug}]
indent_size = 2

[{makefile,Makefile}]
indent_style = tab
tab_width = 4

[Makefile.*]
indent_style = tab
tab_width = 4

[*.{tab,tsv}]
indent_style = tab
tab_width = 1
